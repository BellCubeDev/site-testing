{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Set Up Environment",
            "type": "shell",
            "command": ".vscode\\setupEnv.bat",
            "presentation": {
                "reveal": "never",
                "echo": false,
                "focus": false,
                "panel": "dedicated",
                "close": false,
                "revealProblems": "never",
                "clear": false,
                "showReuseMessage": true
            },

            "group": "build",

            "icon": {
                "id": "package",
                "color": "terminal.ansiYellow"
            }
        },
        {

            // TypeScript Watch from custom .bat
            "label": "TypeScript Watch",
            "type": "shell",
            "command": ".vscode\\watch.bat",

            "problemMatcher": {
                "base": "$tsc-watch",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\d+:\\d+:\\d+ \\w+ - File change detected\. Starting incremental compilation\.\.\.$",
                    "endsPattern": "^Minification complete\.$"
                },
                "fileLocation": [ "relative", "${workspaceFolder}\\site"],
            },
            "isBackground": true,

            "group": "build",

            "presentation": {
                "reveal": "never",
                "echo": false,
                "focus": false,
                "panel": "dedicated",
                "close": false,
                "revealProblems": "never",
                "clear": false,
                "showReuseMessage": true
            },

            "icon": {
                "id": "wrench",
                "color": "terminal.ansiBlue"
            },

            "dependsOn": [
                "Set Up Environment"
            ]

        },
        {
            "label": "Serve Site",
            "type": "shell",
            "command": ".vscode\\serve.bat",
            "isBackground": true,

            "problemMatcher": [{
                "pattern": {
                    "regexp": "^FAKE MATCHER$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^[^\\n\\S]*Generating...|^[^\\n\\S]*Regenerating: \\d+ file(s) changed at .*^",
                    "endsPattern": "^[^\\n\\S]*(?:...)?done in [\\d\\.]+ seconds."
                }
            }],

            "group": "build",

            "detail": "Runs the Jekyll site host and serves it locally.",

            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true,
                "close": false
            },
            "icon": {
                "color": "terminal.ansiGreen",
                "id": "code"
            },

            "dependsOn": [
                "TypeScript Watch"
            ]
        },

        {
            "label": "Open Site Locally (SERVE)",
            "type": "shell",
            "command": "start http://127.0.0.1:4000/site-testing/",

            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "Runs the Jekyll site host and serves it locally.",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true,
                "close": true
            },
            "icon": {
                "color": "terminal.ansiMagenta",
                "id": "globe"
            },

            "dependsOn": [
                "Serve Site"
            ]
        },

        {
            "label": "Build Site",
            "type": "shell",
            "command": ".vscode\\build.bat",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build",
            "detail": "Builds the Jekyll site.",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true,
                "close": false
            },
            "icon": {
                "color": "terminal.ansiGreen",
                "id": "tools"
            },

            "dependsOn": [
                "Set Up Environment",
            ]
        }
    ]
}