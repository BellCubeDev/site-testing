{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve Site",
            "type": "shell",
            "command": ".vscode\\build.bat serve testing http://127.0.0.1:4000/site-testing/",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Runs the Jekyll site host and serves it locally.",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true,
                "close": false
            }
        },
        {
            "label": "Build Site",
            "type": "shell",
            "command": ".vscode\\build.bat",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build",
            "detail": "Builds the Jekyll site.",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true,
                "close": false
            }
        }
    ]
}