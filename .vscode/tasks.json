{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Set Up Environment",
            "type": "shell",

            "command": "${workspaceFolder}\\.vscode\\setupEnv.ps1",

            "options": {
                "shell": {
                    "executable": "powershell.exe",
                    "args": ["-ExecutionPolicy", "Bypass", "-File"]
                }
            },

            "windows": {
                "options": {
                    "cwd": "C:\\" // Workaround for (what I presume to be) a bug in code-server
                }
            },

            "presentation": {
                "reveal": "never",
                "echo": false,
                "focus": false,
                "panel": "dedicated",
                "close": false,
                "revealProblems": "never",
                "clear": false,
                "showReuseMessage": true
            },

            "group": "build",

            "icon": {
                "id": "package",
                "color": "terminal.ansiYellow"
            }
        },
        {

            // TypeScript Watch from custom .bat
            "label": "TypeScript Watch",
            "type": "shell",

            "command": "${workspaceFolder}\\.vscode\\watch.ps1",

            "options": {
                "shell": {
                    "executable": "powershell.exe",
                    "args": ["-ExecutionPolicy", "Bypass", "-File"]
                }
            },

            "windows": {
                "options": {
                    "cwd": "C:\\" // Workaround for (what I presume to be) a bug in code-server
                }
            },

            "problemMatcher": [
                "$node-sass",
                {
                    "base": "$tsc-watch",
                    "fileLocation": [ "relative", "${workspaceFolder}\\site" ],
                },
                {
                    "owner": "BACKGROUND FINISHED DETECTOR",
                    /* Dummy pattern matcher --> */"pattern": [{"regexp": "(1)23456789012345678901234567890","file": 1,"message": 1,"kind": "file"}],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^(?:\\d+:\\d+:\\d+ \\w+ - File change detected\\. Starting incremental compilation\\.\\.\\.|   ROBOCOPY     ::     Robust File Copy for Windows)$",
                        "endsPattern": "^Minification complete\\.$"
                    }
                }
            ],
            "isBackground": true,

            "group": "build",

            "presentation": {
                "reveal": "never",
                "echo": false,
                "focus": false,
                "panel": "dedicated",
                "close": false,
                "revealProblems": "never",
                "clear": false,
                "showReuseMessage": true
            },

            "icon": {
                "id": "wrench",
                "color": "terminal.ansiBlue"
            },

            "dependsOn": [
                "Set Up Environment"
            ]

        },
        {
            "label": "Serve Site",
            "type": "shell",

            "command": "${workspaceFolder}\\.vscode\\serve.ps1",

            "options": {
                "shell": {
                    "executable": "powershell.exe",
                    "args": ["-ExecutionPolicy", "Bypass", "-File"]
                }
            },

            "windows": {
                "options": {
                    "cwd": "C:\\" // Workaround for (what I presume to be) a bug in code-server
                }
            },

            "isBackground": true,

            "problemMatcher": [{
                "pattern": {
                    "regexp": "^FAKE MATCHER$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^[^\\n\\S]*Generating...|^[^\\n\\S]*Regenerating: \\d+ file(s) changed at .*^",
                    "endsPattern": "^[^\\n\\S]*(?:...)?done in [\\d\\.]+ seconds."
                }
            }],

            "group": {
                "kind": "build",
                "isDefault": true
            },

            "detail": "Runs the Jekyll site host and serves it locally.",

            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true,
                "close": false
            },
            "icon": {
                "color": "terminal.ansiGreen",
                "id": "code"
            },

            "dependsOn": [
                "TypeScript Watch"
            ]
        },

        {
            "label": "Open Site Locally (SERVE)",
            "type": "shell",

            "command": "sleep 1\nxdg-open http://http://127.0.0.1:4000/site-testing/",
            "windows": {
                "command": "timeout 1 > nul && start http://127.0.0.1:4000/site-testing/",

                "options": {
                    "cwd": "C:\\" // Workaround for (what I presume to be) a bug in code-server
                }
            },

            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "Runs the Jekyll site host and serves it locally.",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true,
                "close": true
            },
            "icon": {
                "color": "terminal.ansiMagenta",
                "id": "globe"
            },

            "dependsOn": [
                "Serve Site"
            ]
        },

        {
            "label": "Build Site",
            "type": "shell",

            "command": "${workspaceFolder}\\.vscode\\build.ps1",

            "options": {
                "shell": {
                    "executable": "powershell.exe",
                    "args": ["-ExecutionPolicy", "Bypass", "-File"]
                }
            },

            "windows": {
                "options": {
                    "cwd": "C:\\" // Workaround for (what I presume to be) a bug in code-server
                }
            },

            "problemMatcher": [
                "$tsc"
            ],
            "group": "build",
            "detail": "Builds the Jekyll site.",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true,
                "close": false
            },
            "icon": {
                "color": "terminal.ansiGreen",
                "id": "tools"
            },

            "dependsOn": [
                "Set Up Environment",
            ]
        },

        {
            "label": "Get IP Address",
            "type": "shell",

            "command": "${workspaceFolder}\\.vscode\\getIP.ps1",
            "windows": {
                "options": {
                    "cwd": "C:\\" // Workaround for (what I presume to be) a bug in code-server
                }
            },

            "group": { "kind": "test" },
            "detail": "Determine your machine's local IP address",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
                "close": false
            },
            "icon": {
                "color": "terminal.ansiWhite",
                "id": "globe"
            },
        }
    ]
}